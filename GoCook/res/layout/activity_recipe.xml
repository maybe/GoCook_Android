<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/base_actionbar" />
    
    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tabbar_textview_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#999999"
            android:text="@string/biz_recipe_tabbar_menu_addcollecting"
            android:drawableTop="@drawable/recipe_tabbar_like"
            android:drawablePadding="2dp" />

        <TextView
            android:id="@+id/tabbar_textview_upload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#999999"
            android:text="@string/biz_recipe_tabbar_menu_upload"
            android:drawableTop="@drawable/recipe_tabbar_camera" />

        <TextView
            android:id="@+id/tabbar_textview_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#999999"
            android:text="@string/biz_recipe_tabbar_menu_addshoppinglist"
            android:drawableTop="@drawable/recipe_tabbar_buy" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/tabbar"
        android:layout_below="@id/actionBar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/biz_recipe_image_banner_height"
            android:contentDescription="@string/biz_recipe_image_banner_content_description" />
        
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent" >
            
            
        </RelativeLayout>
        
    </LinearLayout>
    
</RelativeLayout>